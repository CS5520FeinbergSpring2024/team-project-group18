<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundPink">

    <TextView
        android:id="@+id/UserListText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friends List"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#EC89BF"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friendListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/UserListText"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/backgroundPink"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
